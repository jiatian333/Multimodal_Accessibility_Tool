<?xml version="1.0" encoding="UTF-8"?>
<OJP xmlns="http://www.vdv.de/ojp" xmlns:siri="http://www.siri.org.uk/siri" version="2.0" 
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
     xsi:schemaLocation="http://www.vdv.de/ojp http://www.vdv.de/ojp/OJP_changes_for_v1.1/OJP.xsd">
    <OJPRequest>
        <siri:ServiceRequest>
            <siri:RequestTimestamp>{timestamp}</siri:RequestTimestamp>
            <siri:RequestorRef>test_test</siri:RequestorRef>
            <OJPTripRequest>
                <siri:RequestTimestamp>{timestamp}</siri:RequestTimestamp>
                <Origin>
                    <PlaceRef>
                        <GeoPosition>
                            <siri:Longitude>{origin[1]}</siri:Longitude>
                            <siri:Latitude>{origin[0]}</siri:Latitude>
                        </GeoPosition>
                    </PlaceRef>
                    <DepArrTime>{arr}</DepArrTime>
                </Origin>
                <Via>
                    <ViaPoint> 
                        <GeoPosition>
                            <siri:Longitude>{via[1]}</siri:Longitude>
                            <siri:Latitude>{via[0]}</siri:Latitude>
                        </GeoPosition>
                    </ViaPoint>
                </Via>
                <Destination>
                    <PlaceRef>
                        <GeoPosition>
                            <siri:Longitude>{destination[1]}</siri:Longitude>
                            <siri:Latitude>{destination[0]}</siri:Latitude>
                        </GeoPosition>
                    </PlaceRef>
                </Destination>
                <Params>
                    <NumberOfResults>{num_results}</NumberOfResults>
                    <IncludeTrackSections>{include_track_sect}</IncludeTrackSections>
                    <IncludeLegProjection>{include_leg_proj}</IncludeLegProjection>
                    <IncludeTurnDescription>{include_turn_desc}</IncludeTurnDescription>
                    <IncludeIntermediateStops>{include_stops}</IncludeIntermediateStops>
                </Params>
            </OJPTripRequest>
        </siri:ServiceRequest>
    </OJPRequest>
</OJP>